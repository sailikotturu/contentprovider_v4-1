<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :  "
        android:layout_below="@+id/itemID"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:id="@+id/name_tv"
        android:layout_alignBottom="@+id/name_label"
        android:layout_toRightOf="@+id/name_label"
        android:layout_toEndOf="@+id/name_label" />

    <TextView
        android:text="Phone Number :  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_label"
        android:layout_marginTop="10dp"
        android:id="@+id/ph_label"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="phone"

        android:paddingLeft="10dp"
        android:id="@+id/ph_tv"
        android:layout_alignBottom="@+id/ph_label"
        android:layout_toRightOf="@+id/ph_label"
        android:layout_toEndOf="@+id/ph_label" />



</RelativeLayout>